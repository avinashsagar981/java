public class WhileLoopExample {
    public static void main(String[] args) {
        int i = 1; // starting value

        while (i <= 5) { // loop will run until i becomes more than 5
            System.out.println("Number: " + i);
            i = i + 1; // increase the value of i by 1
        }
    }
}



